<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.multilingual"
    purge="False">

    <configlet
        title="Multilingual"
        action_id="multilingual"
        appId="collective.multilingual"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@multilingual-settings"
        icon_expr="string:$portal_url/product_icon.png"
        visible="True"
        i18n:attributes="title">
      <permission>Manage portal</permission>
    </configlet>

</object>
